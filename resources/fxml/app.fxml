<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXDrawer?>
<?import com.jfoenix.controls.JFXRippler?>
<?import com.jfoenix.controls.JFXToolbar?>
<?import de.jensd.fx.glyphs.materialicons.MaterialIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<BorderPane prefHeight="1080.0" prefWidth="1920.0" xmlns="http://javafx.com/javafx/8.0.111">
    <top>
        <VBox alignment="CENTER" BorderPane.alignment="CENTER">
            <JFXToolbar id="toolbar" VBox.vgrow="ALWAYS">
                <leftItems>
                    <JFXRippler maskType="CIRCLE" ripplerFill="#f1c40f">
                        <StackPane id="btn-toolbar-sidemenu-burger">
                            <MaterialIconView glyphName="MENU" size="40" textAlignment="CENTER"
                                              StackPane.alignment="CENTER"/>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </StackPane>
                    </JFXRippler>
                    <HBox alignment="CENTER">
                        <Label id="lbl-toolbar" styleClass="toolbar-text" text="[lblToolbar]" alignment="CENTER"
                               textAlignment="CENTER"/>
                    </HBox>
                </leftItems>
                <rightItems>
                    <JFXRippler maskType="CIRCLE" ripplerFill="#f1c40f">
                        <StackPane id="btn-toolbar-options-burger">
                            <MaterialIconView glyphName="MORE_VERT" size="40" textAlignment="CENTER"
                                              StackPane.alignment="CENTER"/>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </padding>
                        </StackPane>
                    </JFXRippler>
                </rightItems>
            </JFXToolbar>
        </VBox>
    </top>
    <center>
        <JFXDrawer id="app-drawer" defaultDrawerSize="350" direction="LEFT">
        </JFXDrawer>
    </center>
</BorderPane>
